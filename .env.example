# API Configuration
# IMPORTANT: Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# API Base URL - Your backend API URL
# Development: http://localhost:8787/api
# Staging: https://stage-www.artist-space.com/api
# Production: https://www.artist-space.com/api
EXPO_PUBLIC_API_BASE_URL=https://stage-www.artist-space.com/api

# Environment
EXPO_PUBLIC_ENV=staging

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC=true
EXPO_PUBLIC_ENABLE_WALLET_LOGIN=true

# Security
# Set to 'true' in production to enforce certificate pinning
EXPO_PUBLIC_ENABLE_TLS_PINNING=false

# Analytics and Monitoring (optional)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_SENTRY_DSN=

# API Timeouts (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=15000

# LiveKit Configuration
# Real-time video/audio/chat with E2EE
EXPO_PUBLIC_LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
EXPO_PUBLIC_LIVEKIT_MEET_URL=wss://meet.artist-space.com
EXPO_PUBLIC_LIVEKIT_CHAT_URL=wss://chat.artist-space.com

# LiveKit E2EE (end-to-end encryption)
EXPO_PUBLIC_LIVEKIT_E2EE_ENABLED=true

# Mux Live Streaming Configuration
# These are public settings for the frontend (do NOT include secrets here)
# Get your Mux environment ID from: https://dashboard.mux.com/
EXPO_PUBLIC_MUX_ENV_KEY=your-mux-environment-key

# Live Stream Quality Defaults
# Options: low, medium, high, ultra, custom
EXPO_PUBLIC_STREAM_DEFAULT_QUALITY=high

# Live Stream Features
EXPO_PUBLIC_STREAM_ENABLE_RECORDING=true
EXPO_PUBLIC_STREAM_ENABLE_CHAT=true
EXPO_PUBLIC_STREAM_MAX_DURATION=7200
