# Database Configuration
PGHOST=localhost
PGPORT=5432
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=streaming_portfolio

# JWT Secret - Change this to a strong random string in production!
JWT_SECRET=your-secure-secret-key-change-in-production

# Server Configuration
PORT=8787
NODE_ENV=development

# CORS Configuration
# Add multiple origins separated by commas
# Common origins: React app (5173), Expo web (19006), proxy (3001)
CORS_ORIGIN=http://localhost:5173,http://localhost:19006,http://localhost:3001

# LiveKit Configuration (Required for video/audio/chat with E2EE)
# Get credentials from: https://cloud.livekit.io/
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_URL=
LIVEKIT_WS_URL=

# LiveKit Multiple Instance Support
# Main backend LiveKit instance
# LIVEKIT_URL=wss://your-instance.livekit.cloud

# Dedicated LiveKit instances for specific services
LIVEKIT_MEET_URL=wss://meet.artist-space.com
LIVEKIT_CHAT_URL=wss://chat.artist-space.com

# Mux Configuration
# Get credentials from: https://dashboard.mux.com/
# API Access Token for Mux Video API
MUX_TOKEN_ID=your-mux-token-id
MUX_TOKEN_SECRET=your-mux-token-secret

# Mux Signing Key for JWT-based APIs (Live Stream Health Stats)
# Create signing key from: https://dashboard.mux.com/settings/signing-keys
# Or via API: curl -X POST -u ${MUX_TOKEN_ID}:${MUX_TOKEN_SECRET} https://api.mux.com/system/v1/signing-keys
# The private key should be base64 encoded: cat your_key.pem | base64
MUX_SIGNING_KEY_ID=your-signing-key-id
MUX_SIGNING_KEY_PRIVATE=your-base64-encoded-private-key

# Mux Live Streaming Configuration
# These settings control the quality and features of your live streams
MUX_MAX_RESOLUTION_TIER=1080p
MUX_LATENCY_MODE=low
MUX_RECONNECT_WINDOW=60

# Optional: Slate images for stream reconnection and offline states
# These images will be shown to viewers when the stream is reconnecting or offline
MUX_SLATE_URL=https://your-cdn.com/offline-slate.jpg
MUX_RECONNECT_SLATE_URL=https://your-cdn.com/reconnecting-slate.jpg

# Mux Video Playback (Optional - for video-on-demand)
MUX_AUTOPLAY_PLAYBACK_ID=
MUX_AUTOPLAY_TITLE=Featured Video
MUX_AUTOPLAY_ENABLED=true

# Email Configuration (Optional - for notifications)
# Get credentials from: https://app.mailjet.com/account/api_keys
MAILJET_API_KEY=
MAILJET_API_SECRET=
OUTBOUND_EMAIL=noreply@artistspace.com
APP_URL=http://localhost:5173

# Site Configuration
SITE_NAME=Artist Space
