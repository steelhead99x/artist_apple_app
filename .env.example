# API Configuration
# IMPORTANT: Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# API Base URL - Your Digital Ocean backend URL
# Development: http://localhost:8787/api
# Production: https://your-backend.digitalocean.app/api
EXPO_PUBLIC_API_BASE_URL=http://localhost:8787/api

# Environment
EXPO_PUBLIC_ENV=development

# Feature Flags
EXPO_PUBLIC_ENABLE_BIOMETRIC=true
EXPO_PUBLIC_ENABLE_WALLET_LOGIN=true

# Security
# Set to 'true' in production to enforce certificate pinning
EXPO_PUBLIC_ENABLE_TLS_PINNING=false

# Analytics and Monitoring (optional)
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_SENTRY_DSN=

# API Timeouts (milliseconds)
EXPO_PUBLIC_API_TIMEOUT=15000
